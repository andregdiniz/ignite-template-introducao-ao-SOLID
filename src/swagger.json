    "/users": {
      "post":{
        "tags": ["Users"],
        "summary": "Create a User",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "UserTest",
                  "email": "user@hotmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean" 
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example":  {
                      "admin": "false",
                      "id": "af37dcaf-1112-4495-815d-8e35f9fea8f5",
                      "name": "Vicktoria Werneck",
                      "email": "vick@hotmail.com",
                      "created_at": "2021-03-10T23:14:43.081Z",
                      "updated_at": "2021-03-10T23:14:43.081Z"
                  }
                }
              }
            }  
          },
          "400": {
            "description": "User already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example":{
                    "error": "User already exists!"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
