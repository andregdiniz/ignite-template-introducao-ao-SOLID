                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": [
                    {
                      "admin": "true",
                      "id": "af37dcaf-1112-4495-815d-8e35f9fea8f5",
                      "name": "Vicktoria Werneck",
                      "email": "vick@hotmail.com",
                      "created_at": "2021-03-10T23:14:43.081Z",
                      "updated_at": "2021-03-10T23:14:43.081Z"
